<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dialogHead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:fontFamily">@font/koruri_extrabold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="dialogBody" parent="dialogHead">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:fontFamily">@font/koruri_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ItemHead" parent="dialogHead">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ItemBody" parent="ItemHead">
        <item name="android:fontFamily">@font/koruri_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>