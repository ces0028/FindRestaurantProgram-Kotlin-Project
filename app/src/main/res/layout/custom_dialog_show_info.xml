<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ivHomepage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/ivCall"
            android:background="@drawable/item_border_line_white"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_homepage" />

        <ImageView
            android:id="@+id/ivCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/ivClose"
            android:background="@drawable/item_border_line_white"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_call" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/item_border_line_white"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_close" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_border_line_white"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/ic_restaurant" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/item_border_line_light"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/dialogHead" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/item_border_line_light"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddress"
                    style="@style/dialogBody" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/item_border_line_light"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSubwayInfo"
                    style="@style/dialogBody" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/item_border_line_light"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOpeningHours"
                    style="@style/dialogBody" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/item_border_line_light"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWebpage"
                    style="@style/dialogBody" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/item_border_line_light"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPhone"
                    style="@style/dialogBody" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/item_border_line_light"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMenu"
                    style="@style/dialogBody" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>